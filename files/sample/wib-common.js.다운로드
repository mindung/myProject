(function ($) {
    var jQuery = $;
	$(window).load(function() {
		/*placeholder 변경*/
		$("#searchBarForm .inputTypeText").attr("placeholder", "Search For...");
	});


	$(function(){

		var Topswiper = new Swiper(".pop_ban .swiper-container", {
			direction: "vertical",
			autoplay : {
			  delay : 5000,   // 시간 설정
			},
			loop : true,
			speed: 500,
		});

		$('#right_quick .top_btn').bind('touchend click', function(){
			$('html,body').animate({scrollTop:0},'slow');
             return false;
		});
		$(document).ready(function(){
		// TOP BANNER COOKIE
			if ($.cookie('topBanner') == undefined) {
				$(".pop_ban").show();
				$(".height80").show();

			}
			else if ($.cookie('topBanner') == '1'){
				$(".pop_ban").hide();
				$(".height80").hide();
				$('body').addClass('topban');
			}
			else if ($.cookie('topBanner') == '0'){
				$(".pop_ban").show();
				$(".height80").show();
			}
			$(".pop_close").click(function() {
				$(".top-banner").slideUp();
				$.cookie('topBanner', '1', {
					expires: 1,
					path: '/'
				});
				$(".pop_ban").stop().slideUp();
				$(".height80").stop().slideUp();
				$('body').addClass('topban');
			});
		});

		//검색시 클로즈버튼
		function cursorMove(e){
			var $cursor = $(".quick_searchClose");
			TweenMax.to(
				$cursor, 0.5, {
				x: e.clientX - 15,
				y: e.clientY - 20,
				ease: Power3.easeOut
			});
		}

		$("#quick_search").mousemove(cursorMove);
		var  $sideMenu = $("#side-menu"),
		   $sideMenuToggle = $(".side-menu-toggle"),    // [MO] 사이드 메뉴
		   $sideMenuClose = $(".m-side-menu-close"),
		   $sideMenu1 = $(".bottom.category > ul > li > a"),
		   $sideMenu2 = $(".sub_m"),
		   $sideMenuX = $(".menu_x"),
		   $mHeader = $("#m-header"),                                  // [MO] 모바일 헤더
		   $mSearchToggle = $(".m-search"),						 // [MO] 모바일 검색창 토글버튼
		   $mSearchArea = $(".m-search-area"),
		   $mSearchClose = $(".m-search-close"),
		   $mFooterToggle = $(".cstab"),
		   $mFooterTogglebox = $(".hide_m");

		// MO 카테고리 메뉴
		sideMenu = function(){
			$sideMenuToggle.click(function(){
				$sideMenu.addClass("on");
				$("body").addClass("oHidden");
			});
			$sideMenuClose.click(function(){
				$sideMenu.removeClass("on");
				$("body").removeClass("oHidden");
			});
		}();
		sideMenu1= function(){
			$sideMenu1.click(function(){
				$(this).next('.sub_m').addClass("on");
				$("body").addClass("oHidden");
			});
			$sideMenuX.click(function(){
				$sideMenu2.removeClass("on");
				$("body").removeClass("oHidden");
			});
		}();
		//모바일 검색
		mSearchOpen = function(){
			$mSearchToggle.click(function(){
				$mSearchArea.stop().fadeIn();
				$("body").addClass("oHidden");
			});

			$mSearchClose.click(function(){
				$mSearchArea.stop().fadeOut();
				$("body").removeClass("oHidden");
			});
		}();
		//모바일 푸터 메뉴
		FmeunOpen = function(){
			$mFooterToggle.click(function(){
				$mFooterTogglebox.stop().slideToggle();
				$mFooterToggle.toggleClass('on');
			});
		}();


		var $category = $(".log_menu"),						// [PC + MO] 카테고리

		// [PC + MO] 카테고리 메뉴
		category = function(){
			//$category.find("> ul").clone().appendTo("#side-menu .bottom");
			$category.find("ul li").mouseenter(function(){
				$(this).addClass("on");
			});

			$category.find("ul li").mouseleave(function(){
					$(this).closest("ul").find("li").removeClass("on");
			});

		}();
		var $Mcategory = $("#side-menu .top"),
		Mcategory = function(){
			//$category.find("> ul").clone().appendTo("#side-menu .bottom");
			$Mcategory.find("ul li").click(function(){
				$(this).toggleClass("on");
			});
		}();
        
	});

	jh_btn();
// 마우스 오버시 해당 지점 기준으로 백그라운드 채워짐
function jh_btn(){
	$(document).on('mouseenter','.j-btn-animation',function(e){
		var parentOffset = $(this).offset(),
			overX = e.pageX - parentOffset.left,
			overY = e.pageY - parentOffset.top;
		$(this).find('.j-overlay').css({top:overY, left:overX});
	});
	if($('.j-btn-animation').length > 0 ){
		
	}
	$(document).on('mouseout','.j-btn-animation', function(e){
		var parentOffset = $(this).offset(),
			overX = e.pageX - parentOffset.left,
			overY = e.pageY - parentOffset.top;
		$(this).find('.j-overlay').css({top:overY, left:overX});
	});
}
})(addjQuery);
